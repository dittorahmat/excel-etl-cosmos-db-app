# Server Configuration
PORT=3001
NODE_ENV=development

# Azure Storage Configuration (use either connection string or account/key)
# Option 1: Connection String
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string

# Option 2: Account and Key
# AZURE_STORAGE_ACCOUNT=your_storage_account
# AZURE_STORAGE_KEY=your_storage_key

# Azure Cosmos DB Configuration (use either connection string or endpoint/key)
# Option 1: Connection String
AZURE_COSMOS_CONNECTION_STRING=your_cosmos_connection_string

# Option 2: Endpoint and Key
# AZURE_COSMOSDB_ENDPOINT=your_cosmos_endpoint
# AZURE_COSMOSDB_KEY=your_cosmos_key
# AZURE_COSMOSDB_DATABASE=your_database_name

# Container/Database Names (optional, defaults shown)
AZURE_STORAGE_CONTAINER=excel-uploads
AZURE_COSMOSDB_CONTAINER=excel-records

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
FILE_SIZE_LIMIT=10485760  # 10MB in bytes

# Logging
LOG_LEVEL=info  # error, warn, info, debug, trace

# Azure AD Authentication
AUTH_ENABLED=true
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_AUDIENCE=api://your_client_id  # Should match the API audience in Azure AD
AZURE_SCOPE=api://your_client_id/.default  # Default scope for token acquisition
