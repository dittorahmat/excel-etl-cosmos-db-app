{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/server",
    "rootDir": "../",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "baseUrl": "../",
    "paths": {
      "@/*": ["server/src/*"],
      "@common/*": ["common/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "../common/**/*.ts", "scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes/upload.route.ts",
    "**/__tests__/**",
    "**/test/**"
  ],
  "references": [],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}