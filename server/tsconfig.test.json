{
  "compilerOptions": {
    "outDir": "./dist-test",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "strict": true,
    "composite": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": ".",
    "noEmit": true
  },
  "include": [
    "test/**/*.ts",
    "test/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
