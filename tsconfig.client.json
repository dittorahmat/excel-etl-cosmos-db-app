{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Client",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*",
    "tests/client/**/*",
    "tests/shared/**/*",
    "vite.config.ts",
    "vitest.workspace.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules",
    "**/dist",
    "**/build",
    "server",
    "common"
  ]
}