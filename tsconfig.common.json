{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Common",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./common/dist",
    "rootDir": "./common",
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "common/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules",
    "**/dist",
    "**/build"
  ]
}