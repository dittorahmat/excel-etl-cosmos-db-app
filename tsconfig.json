{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/src/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "files": [],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./common" },
    { "path": "./server" }
  ]
}
