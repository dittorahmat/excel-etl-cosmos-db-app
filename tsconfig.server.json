{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./server/src/*"],
      "@/test-utils/*": ["./server/src/test-utils/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "include": [
    "server/src/**/*.ts",
    "server/test/**/*.ts",
    "server/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
