{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Server",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "./server/dist",
    "rootDir": "./server",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "server/src/**/*",
    "server/scripts/**/*",
    "tests/server/**/*",
    "tests/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules",
    "**/dist",
    "**/build",
    "src",
    "common"
  ]
}