{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/server",
    "rootDir": "./server/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./node_modules/@types",
      "./server/types"
    ]
  },
  "include": [
    "server/src/**/*.ts",
    "server/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
