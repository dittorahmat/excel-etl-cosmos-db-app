{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "paths": {
      "@/server/*": ["server/src/*"],
      "@/server/test-utils/*": ["server/src/test-utils/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": [
    "server/src/**/*.ts",
    "server/src/**/*.d.ts",
    "server/test/**/*.ts",
    "common/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
