{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "paths": {
      "@/server/*": ["server/src/*"],
      "@/server/test-utils/*": ["server/src/test-utils/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": [
    "server/src/**/*.ts",
    "server/src/**/*.d.ts",
    "common/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "server/test/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
